<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:id="@+id/courseSearchResultLayout">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sectionsTextView"
        android:layout_below="@+id/courseCodeTextView"
        android:textSize="13sp"
        android:paddingTop="4dp" />

    <ImageButton
        android:text="Button"
        android:layout_height="50dp"
        android:id="@+id/actionButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_add_class"
        style="?attr/borderlessButtonStyle"
        android:layout_width="50dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/courseCodeTextView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/courseTitleTextView"
        android:paddingTop="4dp"
        android:textSize="13sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/courseTitleTextView"
        android:textSize="13sp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>